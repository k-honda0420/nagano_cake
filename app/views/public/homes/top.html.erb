<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p>
        ようこそ、NaganoCakeへ！<br>
      </p>
<h1>Items</h1>
      <table class="table show">
        <th>商品名<br>商品画像</th>
        <th>ジャンル</th>
        <th>説明</th>
        <th>価格</th>
        <% @item.each do |item| %>
        <tr>
          <td>
            <%= link_to item_path(item) do %>
            <%= item.name %><br>
            <%= attachment_image_tag item, :image, :fill, 50, 50, fallback: "no_image.jpg"%>
            <% end %>
                </td>
              <td><%= item.genre.name %></td>
              <td><%= item.introduction %></td>
              <td><%= item.price %></rd>
              </tr>
              
              <% end %>
              </table>
            </div>
          </div>
          </div>
          <div class="container">
      <div class="row">
        <div class="my-box col-12">
          <% if customer_signed_in? %>
          <% elsif admin_signed_in? %>
          <% else %>
          <%= link_to "Log in", new_customer_session_path, class:"btn btn-primary col-xs-10 col-xs-offset-2" %><br><br>
          <%= link_to "Sign Up", new_customer_registration_path, class:"btn btn-success col-xs-10 col-xs-offset-2" %><br><br>
          <%= link_to "管理者ログイン", new_admin_session_path, class:"btn btn-success col-xs-10 col-xs-offset-2" %><br><br>
          <% end %>
　　</div>
</div>
</div>

