<div class="container">
  <div class="row">
    <div class="col-mx-1">
      <h1>Item detail</h1>
      <p>商品名</p>
      <%= @item.name %>
      <p>ジャンル</p>
      <%= @item.genre.name %>
      <p>商品画像</p>
      <%= attachment_image_tag @item, :image, :fill, 50, 50, fallback: "no_image.jpg"%>
      <p>商品説明</p>
      <%= @item.introduction %>
      <p>価格</p>
      <%= @item.price %>
      <p>個数</p>
      <%= form_with model:@cart_item, url: cart_items_path(@cart_item) do |f| %>
      <%= f.hidden_field :item_id  , :value => @item.id %>
      <%= f.number_field :amount , placeholder: "個数選択", min: 1, max: 10 %>
      <br>
      <%= f.submit "カートに入れる" ,class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
