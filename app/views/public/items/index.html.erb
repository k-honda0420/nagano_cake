
<div class="container">
  <div class="row">
   <div class="col-md-12">
<h1>Items</h1>
      <table class="table show">
        <th>商品名<br>商品画像</th>
        <th>ジャンル</th>
        <th>説明</th>
        <th>価格</th>
        <% @item.each do |item| %>
        <tr>
          <td>
            <%= link_to item_path(item) do %>
            <%= item.name %><br>
            <%= attachment_image_tag item, :image, :fill, 50, 50, fallback: "no_image.jpg"%>
            <% end %>
                </td>


              <td><%= item.genre.name %></td>

              <td><%= item.introduction %></td>
              <td><%= item.price %></rd>

              <% end %>
</div>
</div>
</div>


