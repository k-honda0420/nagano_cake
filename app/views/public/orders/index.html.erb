<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>注文履歴一覧</h1>
      <table class="table orders-show">
      <th>注文番号</th>
      <th>注文日時</th>
      <th>お客様</th>
      <th>配送先郵便番号</th>
      <th>合計金額</th>
      <th></th>
      <% @order.each do |order| %>
      <tr>
        <td><%= order.id %><br>
        <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= order.name %><br>
        <td><%= order.postal_code %><br>
        <td><%= order.total_payment %><br>
        <td><%= link_to "確認",  order_path(order), class:"btn btn-success" %></td>
        <% end %>
      </div>
    </div>
  </div>
  