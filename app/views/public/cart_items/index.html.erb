<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-mx-1">
      <h1>cart_items</h1>
        <table class="table imte">
        <th>商品名<br>
        <th>単価</th>
        <th>数量</th>
        <th>合計価格</th>
        <% total_price = 0 %>
        <% @cart_item.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.item.price*cart_item.amount  %></td>
        </tr>
        <% end %>
    </div>
  </div>
</div>
