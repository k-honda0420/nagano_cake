<h1>Public::Addresses#index</h1>
<p>Find me in app/views/public/addresses/index.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-mx-1">
      <h1>配送先登録</h1>
      <%= form_with model: @address, url:addresses_path, method: :post do |f| %>
      <%= f.label :宛名 %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      <br><br>
      <%= f.label :郵便番号 %><br>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      <br><br>
      <%= f.label :住所 %><br>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      <br><br>
      <%= f.submit "登録する", class:"btn btn-primary" %>
      <% end %>
      </tr>
    </div>
    
     <table  class="table table-bordered">
        <tr>
          <th>宛名</th>
          <th>郵便番号</th>
          <th>住所</th>
          <th></th>
        </tr>
        <% @address.each do |address| %>
        <tr>
          <td><%= address.name %></td>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td>
            <%= link_to "編集する", addresses_path(address),method: :get , class: "btn btn-primary" %>　　<%= link_to "削除する", addresses_path(address), method: :delete , class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="col-xs-6 col-xs-offset-4 ">

      </div>
</div>
</div>
</div>
</div>