<div class="container">
  <div class="row">

   <div class="col-md-3">
<h1>Editing Genre</h1>



<%= form_with model:@genre, url:admin_genre_path, local:true do |f| %>

  <h3><%= f.label :Genre %><br></h3>
  <%= f.text_field :name %>
  <br><br>
  <%= f.submit 'Update Genre' %>
  <br><br>
  <%= link_to "Show", admin_genres_path, class:"btn btn-info" %>
  |
  <%= link_to "Back", admin_genres_path, class:"btn btn-primary" %>
  |
  <%= link_to "Destroy", admin_genre_path(@genre), method: :delete, data: {confirm: "消しますか？"}, class:"btn btn-danger" %>


<% end %>
</div>
</div>
</div>
