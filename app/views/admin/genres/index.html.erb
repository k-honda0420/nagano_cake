<div class="container">
  <div class="row">

   <div class="col-md-3">
     <h1>Genres</h1>

<div class="genres">

<!-- サイドバー -->

<h1>New Genre</h1>
<%= form_with(model:@genre, url:admin_genres_path, method: :POST, local:true) do |f| %>

<div>
  <%= f.label :Genre %>
</div>
<div>
  <%= f.text_field :name %>
</div>
</div>
<br>
  <%= f.submit 'Create Genre' %>

<% end %>
    </div>

<!-- サイドバー終わり -->

<div class="col-md-9">
<h1>Genres detail</h1>
      <table class="table genres-show">

            <th>NAME</th>
            <th>作成時刻</th>
            <th>更新日時</th>
            <th></th>
         <% @genre.each do |genre| %>
            <tr>
              <td>
                  <%= genre.name %>
                </td>
              <td>

                <%= genre.created_at.strftime('%Y/%m/%d %H:%M') %>

                </td>

                <td><%= genre.updated_at %></td>

              <td><%= link_to "Edit",  edit_admin_genre_path(genre), class:"btn btn-success"%></td>

              <% end %>

          </tr>
        </table>
</div>
</div>
</div>
